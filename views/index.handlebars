<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{burger_name}}
        <button class="eat-btn" data-id="{{id}}">
            EAT
        </button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Eaten</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="newBurger">Burger Name:</label>
        <input type="text" id="newBurger" name="name">
    </div>
    <button type="submit">Add Burger</button>
</form>